# ============================================================================
# TELEGRAM UPTIME BOT - ENVIRONMENT CONFIGURATION
# ============================================================================

# =========================
# TELEGRAM BOT CONFIGURATION
# =========================
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# Admin/Owner Configuration
OWNER_ID=123456789
ADMIN_IDS=123456789,987654321

# Bot Settings
BOT_NAME=UptimeBot
BOT_VERSION=1.0.0
BOT_DESCRIPTION=Professional Uptime Monitoring Bot
MAX_CONNECTIONS=100
WEBHOOK_MODE=false

# =========================
# DATABASE CONFIGURATION
# =========================

# PostgreSQL (Primary Database)
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=uptime_bot
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# MongoDB (Alternative/Secondary Database)
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=uptime_bot
MONGO_COLLECTION_LINKS=links
MONGO_COLLECTION_USERS=users
MONGO_COLLECTION_LOGS=logs

# Redis (Caching & Session Management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_CACHE_TTL=3600

# =========================
# MONITORING CONFIGURATION
# =========================

# Ping Settings
DEFAULT_PING_INTERVAL=300
MIN_PING_INTERVAL=60
MAX_PING_INTERVAL=86400
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=5

# Concurrent Monitoring
MAX_CONCURRENT_PINGS=50
MONITOR_BATCH_SIZE=100
MONITOR_WORKER_COUNT=5

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# =========================
# SELF-PING CONFIGURATION (RENDER)
# =========================
SELF_PING_ENABLED=true
SELF_PING_URL=https://your-render-app.onrender.com
SELF_PING_INTERVAL=300
SELF_PING_METHOD=GET
SELF_PING_TIMEOUT=15
SELF_PING_RETRY_COUNT=3

# =========================
# NOTIFICATION SETTINGS
# =========================

# Alert Configuration
ENABLE_DOWNTIME_ALERTS=true
ENABLE_RECOVERY_ALERTS=true
ALERT_COOLDOWN=900
MAX_ALERTS_PER_HOUR=10
ALERT_RETRY_COUNT=3

# Notification Channels
ALERT_CHANNEL_ID=
BROADCAST_CHANNEL_ID=
LOG_CHANNEL_ID=

# =========================
# LOGGING CONFIGURATION
# =========================

# Log Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_FILE_PATH=logs/uptime_bot.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5
LOG_TO_CONSOLE=true
LOG_COLORIZE=true

# Database Logging
DB_LOG_ENABLED=true
DB_LOG_RETENTION_DAYS=30
DB_LOG_BATCH_SIZE=100

# =========================
# SECURITY & RATE LIMITING
# =========================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_USER=30
RATE_LIMIT_WINDOW=60
RATE_LIMIT_STORAGE=redis

# Security
SECRET_KEY=your_secret_key_here_change_this_in_production
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=86400

# API Keys (if needed)
API_KEY_HEADER=X-API-Key
API_KEYS=key1,key2,key3

# =========================
# USER LIMITS & QUOTAS
# =========================

# Free Tier Limits
FREE_USER_MAX_LINKS=10
FREE_USER_MIN_INTERVAL=300

# Premium Tier Limits
PREMIUM_USER_MAX_LINKS=100
PREMIUM_USER_MIN_INTERVAL=60

# Admin Limits
ADMIN_MAX_LINKS=1000
ADMIN_MIN_INTERVAL=30

# =========================
# WEBHOOK CONFIGURATION
# =========================

# Webhook Settings (if using webhook mode)
WEBHOOK_HOST=https://your-domain.com
WEBHOOK_PATH=/webhook/{token}
WEBHOOK_URL={WEBHOOK_HOST}{WEBHOOK_PATH}
WEBHOOK_PORT=8443
WEBHOOK_LISTEN=0.0.0.0

# SSL/TLS
WEBHOOK_SSL_CERT=
WEBHOOK_SSL_PRIV=

# =========================
# API SERVER CONFIGURATION
# =========================

# FastAPI Settings
API_ENABLED=true
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
API_DEBUG=false

# CORS
CORS_ENABLED=true
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=*

# =========================
# BACKUP & MAINTENANCE
# =========================

# Database Backup
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_PATH=backups/
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESS=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Bot is under maintenance. Please try again later.

# =========================
# METRICS & ANALYTICS
# =========================

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Statistics
STATS_ENABLED=true
STATS_CACHE_TTL=300
STATS_HISTORY_RETENTION_DAYS=90

# =========================
# PERFORMANCE TUNING
# =========================

# Threading & Async
THREAD_POOL_SIZE=10
PROCESS_POOL_SIZE=4
ASYNC_TIMEOUT=60

# Memory Management
MAX_MEMORY_MB=512
GARBAGE_COLLECTION_ENABLED=true
GC_THRESHOLD=700,10,10

# =========================
# EXTERNAL SERVICES
# =========================

# Email Notifications (optional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# Sentry (Error Tracking)
SENTRY_ENABLED=false
SENTRY_DSN=

# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_ID=

# =========================
# DEVELOPMENT & DEBUG
# =========================

# Development Mode
DEBUG=false
DEV_MODE=false
TESTING=false

# Profiling
PROFILING_ENABLED=false
PROFILING_OUTPUT_PATH=profiles/

# =========================
# TIMEZONE & LOCALIZATION
# =========================

# Timezone
TIMEZONE=UTC
DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ru,es,fr,de

# =========================
# RENDER SPECIFIC SETTINGS
# =========================

# Render Platform
RENDER_ENABLED=true
RENDER_INSTANCE_ID=
RENDER_SERVICE_NAME=uptime-bot
RENDER_REGION=

# Port (Render assigns this automatically)
PORT=10000

# =========================
# FEATURE FLAGS
# =========================

# Features
ENABLE_PREMIUM_FEATURES=true
ENABLE_ADMIN_PANEL=true
ENABLE_USER_DASHBOARD=true
ENABLE_EXPORT_DATA=true
ENABLE_IMPORT_DATA=true
ENABLE_BATCH_OPERATIONS=true
ENABLE_SCHEDULED_REPORTS=true
ENABLE_CUSTOM_DOMAINS=true
ENABLE_SSL_MONITORING=true
ENABLE_DNS_MONITORING=true
ENABLE_API_MONITORING=true

# Experimental Features
EXPERIMENTAL_FEATURES=false
BETA_FEATURES=false
